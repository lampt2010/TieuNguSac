            s += "<a href = '/tin-tuc/" + list[0].MetaTitle + "-d." + list[0].ID + "' title='" + list[0].Name + "'>" + list[0].Name + "</a>";
            s += "    </h3>";
            s += "<p class='date'>" + list[0].CreatedDate.ToString() + " - " + list[0].ViewCount + " lượt xem</p>";
            s += "<p class='desc'>";
            s += list[0].Description;

            s += "</p>";

            s += "<div class='view_more'>";
            s += "<a href = '/tin-tuc/" + list[0].MetaTitle + "-d." + list[0].ID + "' title='" + list[0].Name + "'>Chi tiết<i class='fa fa-angle-right' aria-hidden='true'></i></a>";
            s += "     </div>";
            s += "   </div>";
            s += "</li>";
        }
        for(int i = 1; i < list.Count; i++)
        {
            s+= "<li><a href = 'tin-tuc/"+list[i].MetaTitle+"-d."+list[i].ID+"' title='"+list[0].Name+"'>"+list[i].Name+"</a> <span>("+list[i].ViewCount+" lượt xem)</span></li>";
        }

        s+="</ul>";
        return s;
    }
}




