@functions{
    public string GetContent(long id)
    {
        string s = "<ul class='list_home_news'>";


        //<li><a href = "#" title="">Uống trà Thái Nguyên giúp làm giảm cholesterol</a> <span>(3.929 lượt xem)</span></li>
