@model List<Model.EF.Content>
    <div class="tintuc_noibat">
        <h2 class="title_danh_muc ttnb_title">Tin tức nổi bật</h2>
        <ul class="list_ttnb">
            @if (Model.Count > 0)
            {
                <li>
                    <a href="/tin-tuc/@Model[0].MetaTitle-d.@Model[0].ID" title="@Model[0].Name">
                        <img src="@Model[0].Image" alt="@Model[0].Name">
                        <h4 class="ttnb_name">
                          @Model[0].Name
                        </h4>
                        <p class="ttnb_dff">
                         @Model[0].CreatedDate - @Model[0].ViewCount lượt xem
                        </p>
                    </a>
                </li>

            }



            @for (int i = 1; i < Model.Count; i++)
            {
            <li>
                <a href="/tin-tuc/@Model[i].MetaTitle-d.@Model[i].ID" title="@Model[i].Name">
                    @Model[0].Name
                </a>
            </li>
         

            }
        </ul>
    </div>
