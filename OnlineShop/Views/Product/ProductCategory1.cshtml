@model List<Model.EF.ProductCategory>
<div class="list_danh_muc">
        <h2 class="title_danh_muc">DANH MỤC SẢN PHẨM</h2>
        <ul>
            @foreach (var item in Model.Where(x => x.ParentID == null))
            {
                var child = Model.Where(x => x.ParentID == item.ID);
                var parentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown" : "";
                <li class="dropdown">
                    <a href="/danh-muc-san-pham/@item.MetaTitle-@item.ID" @parentClass>@item.Name</a>
                    @if (child.Count() > 0)
                    {
                        <ul class="dropdown-menu">
                            @foreach (var childItem in child)
                    {
                                <li><a href="/danh-muc-san-pham/@childItem.MetaTitle-@childItem.ID">@childItem.Name</a></li>
                            }

                        </ul>
                    }

                </li>
            }
        </ul>
    </div>